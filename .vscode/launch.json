{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch so_long",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/minishell",
            "args": [""],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            // "setupCommands": [
            //     {
            //         "description": "Enable pretty-printing for gdb",
            //         "text": "-enable-pretty-printing",
            //         "ignoreFailures": true
            //     }
            "setupCommands": [
                {
                    "description": "Suivre le processus enfant lors du fork",
                    "text": "-gdb-set detach-on-fork off",
                    "ignoreFailures": true
                },
                {
                    "description": "S'arrêter dans l'enfant après le fork",
                    "text": "-gdb-set follow-fork-mode child",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}